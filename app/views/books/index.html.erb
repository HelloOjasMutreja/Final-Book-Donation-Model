<div class="row">
  <div class="col-12">
    <h2 class="tm-page-title mb-4"
      style="font-family: 'League Script', cursive;
        font-size: 4rem;
        -webkit-text-stroke: 2px black;
        padding-left: 1rem;">
      Books for donation
    </h2>
  </div>
</div>

<br />
<br />

<div class="row">
  <div class="col-md-4">
    <%= link_to "Categories", categories_path, class: "btn btn-dark text-center mb-3 category-btn" %>
  </div>
  <div class="col-md-8">
    <%= render "search/form" %>
  </div>
</div>

<br />


<div id="books">
  <% if @books.count == 0 %>

    <h1>There are no books currently.</h1>

  <% else %>
    <div class="row tm-catalog-item-list">
      <% @books.each do |book| %>
        <div class="col-lg-3 col-md-4 col-sm-6 tm-catalog-item">
          <% if book.image.attached? %> 
            <%= link_to image_tag(book.image_as_thumbnail, class: "book-thumbnail"), book %>
          <% else %>
            <div class="no-image-thumbnail-div">
              <%= link_to book.title, book, class: "no-image-thumbnail" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
