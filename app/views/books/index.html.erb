<h1>Books</h1>

<div id="books">
  <% if @books.count == 0 %>

    <h1>There are no books currently.</h1>

  <% else %>
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-3">
          <% if book.image.attached? %> 
            <%= link_to image_tag(book.image_as_thumbnail, class: "book-thumbnail"), book %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
