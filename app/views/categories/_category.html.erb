<div id="<%= dom_id category %>">
  <h2>
    <strong><%= link_to category.name, category %></strong>
  </h2>

  <% if category.books.count == 0 %>

    <h1>There are no books currently in this category.</h1>

  <% else %>
    <div class="row">
      <% category.books.each do |book| %>
        <div class="col-md-3">
          <% if book.image.attached? %> 
            <%= link_to image_tag(book.image_as_thumbnail), book %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

</div>
