<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</div>

<% if user_signed_in? %>
    <% if current_user.admin? || current_user.moderator? %>
      <%= link_to "New category", new_category_path %>
    <% end %>
  <% end %>